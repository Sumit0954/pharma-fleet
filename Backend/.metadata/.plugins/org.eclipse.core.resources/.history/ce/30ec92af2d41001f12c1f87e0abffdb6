package com.pharmaFleetBackend.DataAccesslayer;

import java.util.Optional;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.config.EnableJpaRepositories;
import org.springframework.stereotype.Repository;

import com.pharmaFleetBackend.Entity.Users;
import com.pharmaFleetBackend.LoginDetails.LoginInfo;

@EnableJpaRepositories
@Repository
public interface DataAccess extends JpaRepository<Users, Long>
{
	
	Optional<LoginInfo>FindByEmailAndPassword(String Email , String Password);
	
	public LoginInfo findByEmail(String Email);
}
